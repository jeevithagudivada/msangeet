<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org">

<head>
    <!-- Use the 'title' property to render a page title  -->
    <title>
        <%= title %>
    </title>
</head>

<body ng-app="indexApp" ng-cloak>
    <div id="nav-bar" class="header-container" layout="row" layout-align="space-around center">
        <div layout="row" layout-align="center center">
            Welcome to mSangeet
        </div>
    </div>
    <% for(var i in messages) { %>
        <div class="flash">
            <%= messages[i] %>
        </div>
        <% } %>
            <div id="login-card" layout="row">
                <md-card id="general-dp-card" layout="row">
                    <img flex="40" ng-src="img/dp.png" class="md-card-image" alt="Washed Out">
                    <div flex="60" id="general-info-card" layout="column">
                        <md-card-content>
                            <form name="loginForm" action="/oauth/facebook" layout="row" layout-align="center center">
                                <md-button type="submit" id="facebook-login-button" layout="row" layout-align="space-around center">
                                    <span class="facebook-login-button-icon">
                                <ng-md-icon icon="facebook" style="fill:white" size="32"></ng-md-icon>
                            </span>
                                    <label>LOGIN WITH FACEBOOK</label>
                                </md-button>
                            </form>
                            <form name="loginForm" action="/auth/local" method="post">
                                <div layout-gt-sm="column" layout-align="center center">
                                    <label>Are you under age 13?</label>
                                    <md-input-container class="md-block" flex-gt-sm="">
                                        <label>Username</label>
                                        <input name="username" required>
                                    </md-input-container>
                                    <md-input-container class="md-block" flex-gt-sm="">
                                        <label>Password</label>
                                        <input type="password" name="password" required>
                                    </md-input-container>
                                </div>
                                <div layout="row" layout-align="center center">
                                    <md-button type="submit" id="login-button" layout="row" layout-align="space-around center center">
                                        <label>LOGIN</label>
                                    </md-button>
                                </div>
                            </form>
                        </md-card-content>
                    </div>
                </md-card>
            </div>



            <div id="footer">
                <div id="footer-container" layout="column">
                    <div id="info-bar" layout="row" layout-align="space-around center">
                        <div id="info-address" layout="column">
                            <label style="font-weight: bold">mSangeet</label>
                            </br>
                            <div flex="33" id="office-address" class="footer-address" style="width:200px">100 Feet Ring Road, Banashankari Stage III, Bengaluru, Karnataka 560085</div>
                        </div>
                        <div id="info-subscribe" layout="column">
                            <label style="font-weight: bold">Subscribe for newsletter</label>
                            <div class="subscribe-email-container" flex="33" id="subscribe" class="footer-subscribe" layout="row" layout-align="center center">
                                <input type="text" id="subscribe-email-input" placeholder="Enter email" />
                                <md-button id="subscribe-button">GO</md-button>
                            </div>
                        </div>
                        <div id="info-connect" layout="column">
                            <label style="font-weight: bold">Connect with us</label>
                            <div flex="33" id="follow" class="footer-follow" layout="row" layout-align="center center">
                                <ng-md-icon icon="facebook-box" class="footer-follow-element" style="fill: white" size="34"></ng-md-icon>
                                <ng-md-icon icon="twitter" class="footer-follow-element" style="fill: white" size="34"></ng-md-icon>
                                <ng-md-icon icon="linkedin-box" class="footer-follow-element" style="fill: white" size="34"></ng-md-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <md-divider class="divider"></md-divider>
                <div id="licence-bar" layout="row" layout-align="center center">
                    <div layout="row" layout-align="start center">
                        <md-button type="submit" id="nav-button">Contribute</md-button>
                        <md-button type="submit" id="nav-button">Privacy</md-button>
                        <md-button type="submit" id="nav-button">Contact</md-button>
                    </div>
                    <div layout="row" layout-align="end center">
                        &copy Copyright 2015, All Rights Reserved
                    </div>
                </div>
            </div>

            <link rel="stylesheet" href="/lib/angular-material/angular-material.css">
            <link rel="stylesheet" href="/css/main.css">
            <link rel="stylesheet" href="/css/login.css">

            <!-- Load local libraries -->
            <script type="text/javascript" src="/lib/angular/angular.js"></script>
            <script type="text/javascript" src="/lib/angular-resource/angular-resource.js"></script>
            <script type="text/javascript" src="/lib/angular-animate/angular-animate.js"></script>
            <script type="text/javascript" src="/lib/angular-aria/angular-aria.js"></script>
            <script type="text/javascript" src="/lib/angular-material/angular-material.js"></script>
            <script type="text/javascript" src="/lib/angular-material-icons/angular-material-icons.js"></script>

            <script type="text/javascript">
                angular.module('indexApp', ['ngMdIcons', 'ngMaterial'])
                    .controller('MainCtrl', [function() {
                        var self = this;
                    }]);

            </script>
</body>

</html>
